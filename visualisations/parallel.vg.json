{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/csvjson.json"
  },
  "title": "Correlation of life expectancy with health",
  "width": "container",
  "height": 300,
  "transform": [
    { "window": [{ "op": "count", "as": "index" }] },
    {
      "fold": [
        "Life expectancy",
        "Infant mortality",
        "Fertility Rate",
        "Birth Rate"
      ]
    },
    {
      "window": [
        { "op": "min", "field": "value", "as": "min" },
        { "op": "max", "field": "value", "as": "max" }
      ],
      "frame": [null, null],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max-datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.min + datum.max) / 2",
      "as": "mid"
    }
  ],
  "layer": [
    {
      "mark": { "type": "rule", "color": "#ccc", "tooltip": null },
      "encoding": {
        "detail": { "aggregate": "count", "type": "quantitative" },
        "x": { "type": "nominal", "field": "key" }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          },
          "legend": {"labelFontSize": 10, "symbolSize":10, "titleFontSize": 10}
        },
        "detail": { "type": "nominal", "field": "index" },
        "opacity": { "value": 0.3 },
        "x": { "type": "nominal", "field": "key" },
        "y": { "type": "quantitative", "field": "norm_val", "axis": null },
        "tooltip": [
          {
            "field": "Life expectancy"
          },
          {
            "field": "Infant mortality"
          },
          {
            "field": "Fertility Rate"
          },
          {
            "field": "Birth Rate"
          }
        ]
      }
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 0 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": {
              "aggregate": "max",
              "field": "max",
              "type": "quantitative"
            }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 150 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": {
              "aggregate": "min",
              "field": "mid",
              "type": "quantitative"
            }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 300 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": {
              "aggregate": "min",
              "field": "min",
              "type": "quantitative"
            }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    }
  ],
  "config": {
    "background": "transparent",
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": false
    },
    "view": { "stroke": null },
    "style": {
      "label": {
        "baseline": "middle",
        "align": "right",
        "dx": -5,
        "tooltip": null
      },
      "tick": { "orient": "horizontal", "tooltip": null }
    }
  }
}
