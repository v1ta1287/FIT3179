{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "background": "transparent"
  },
  "title": "Global Life Expectancy At Birth",
  "width": "container",
  "height": 300,
  "data": {
    "url": "data/ne_110m_admin_0_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "Country"
        }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": { "tooltip": { "field": "Country" } }
    },
    {
      "data": {
        "url": "data/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "data/ne_110m_graticules_30.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/life.csv"
            },
            "key": "Country",
            "fields": ["Life Expectancy at Birth (2021)", "Country"]
          }
        }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "Life Expectancy at Birth (2021)",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [50, 90],
            "range": ["#9fc489", "#67c72e", "#388f04", "#1c4702"]
          },
          "legend": {
            "format": ".1s",
            "labelFontSize": 10,
            "symbolSize": 100000  ,
            "titleFontSize": 10
          },
          "title": "Years"
        },
        "tooltip": [
          {
            "field": "Life Expectancy at Birth (2021)",
            "type": "quantitative"
          },
          { "field": "Country", "type": "nominal" }
        ]
      }
    }
  ]
}
