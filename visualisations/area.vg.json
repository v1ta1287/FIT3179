{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "background": "transparent"
  },
  "title": "Population increase over the years",
  "width": "container",
  "height": 230,
  "data": {"url": "data/areachart.csv"},
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "yearmonth", "field": "Year"
    },
    "y": {
      "aggregate": "sum", "field": "Population"
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": ["America", "Europe", "Africa", "Asia", "Oceania"],
        "range": ["#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628"]
      },
      "legend": { "labelFontSize": 10, "symbolSize": 10, "titleFontSize": 10 }
    }
  }
}
