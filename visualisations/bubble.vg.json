{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "background": "transparent",
    "font": "Roboto"
  },
  "width": "container",
  "title": "Life expectancy vs GDP Per Capita",
  "data": {
    "url": "data/global_data.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }

    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Population > Population_Above"},
    {"filter": "datum.GDPPerCapita < 100000"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "GDPPerCapita",
      "type": "quantitative",
      "axis": {"tickCount": 3},
      "scale": {"type": "log", "domain": [100, 100000]}
    },
    "y": {
      "field": "Life expectancy",
      "type": "quantitative",
      "axis": {"tickCount": 7},
      "scale": {"domain": [50,85]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": { "format": ".1s" , "labelFontSize": 10, "symbolSize":1, "titleFontSize":10}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Continent", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ""},
          {"field": "Life expectancy", "type": "quantitative", "format": ""},
          {"field": "Land Area(Km2)", "type": "quantitative", "format": ""},
          {"field": "Capital/Major City", "type": "nominal"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dy": -12,
        "fontSize": 11.5,
        "fontStyle": "italic",
        "fontWeight": "bold"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'South Korea' || datum['Country'] == 'Sierra Leone' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Continent", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ""},
          {"field": "Life expectancy", "type": "quantitative", "format": ""},
          {"field": "Land Area(Km2)", "type": "quantitative", "format": ""},
          {"field": "Capital/Major City", "type": "nominal"}
        ]
      }
    }
  ]
}
